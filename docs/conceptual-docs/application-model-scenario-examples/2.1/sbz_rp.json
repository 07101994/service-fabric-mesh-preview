{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "name": "myfileshare",
      "type": "Microsoft.ServiceFabric/volumes",
      "location": "SouthCentralUS",
      "dependsOn": [
        "Microsoft.ServiceFabric/secretStores/myStore"
      ],
      "properties": {
        "schemaVersion": "0.0.1",
        "description": "File share backed by Azure Files storage.",
        "provider": "SFAzureFile",
        "azureFileParameters": {
          "shareName": "helloworldshare",
          "accountName": "testaccount",
          "accountKey": "[reference(secret:myStore/azureFilesAccessKey)]"
        }
      }
    },
    {
      "name": "myStore",
      "type": "Microsoft.ServiceFabric/secretStores",
      "location": "SouthCentralUS",
      "dependsOn": [],
      "properties": {
        "schemaVersion": "0.0.1",
        "secrets": [
          {
            "name": "imageRegistryPassword",
            "kind": "inline",
            "value": "myPassword"
          },
          {
            "name": "azureFilesAccessKey",
            "kind": "inline",
            "value": "Eby8vdM02xNOcqFlqUwJPLlmEtlCDXJ1OUzFT50uSRZ6IFsuFq2UVErCz4I6ty/K1SZFPTOtr/KBHBeksoGMGw=="
          }
        ]
      }
    },
    {
      "name": "myNetwork",
      "type": "Microsoft.ServiceFabric/networks",
      "location": "SouthCentralUS",
      "dependsOn": [],
      "properties": {
        "schemaVersion": "0.0.1",
        "addressPrefix": "10.0.0.4/22",
        "ingressConfig": {
          "layer4": [
            {
              "publicPort": "8080",
              "applicationName": "myapp",
              "serviceName": "myFrontendService",
              "endpointName": "publicListener"
            }
          ]
        }
      }
    },
    {
      "name": "myapp",
      "type": "Microsoft.ServiceFabric/applications",
      "location": "SouthCentralUS",
      "dependsOn": [
        "Microsoft.ServiceFabric/networks/myNetwork",
        "Microsoft.ServiceFabric/secretStores/myStore",
        "Microsoft.ServiceFabric/volumes/myfileshare"
      ],
      "properties": {
        "schemaVersion": "0.0.1",
        "description": "Hello world seabreeze!",
        "services": [
          {
            "name": "myFrontendService",
            "properties": {
              "description": "Seabreeze frontend service.",
              "osType": "linux",
              "codePackages": [
                {
                  "name": "frontend",
                  "image": "seabreeze/sbz-frontend:1.0-alpine",
                  "endpoints": [
                    {
                      "name": "publicListener",
                      "port": "8080"
                    }
                  ],
                  "certificateRef": [
                    {
                      "name": "mycert"
                    }
                  ],
                  "environmentVariables": [
                    {
                      "name": "backendName",
                      "value": "myBackendService"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "2",
                      "memoryInGB": "2"
                    }
                  }
                }
              ],
              "replicaCount": "5",
              "networkRefs": [
                "mynetwork"
              ]
            }
          },
          {
            "name": "myBackendService",
            "properties": {
              "description": "Seabreeze backend service.",
              "osType": "linux",
              "codePackages": [
                {
                  "name": "backend",
                  "image": "seabreeze/sbz-backend:1.0-alpine",
                  "volumeRefs": [
                    {
                      "name": "dataShare",
                      "destinationPath": "/data"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "2",
                      "memoryInGB": "2"
                    }
                  }
                }
              ],
              "replicaCount": "1",
              "networkRefs": [
                "mynetwork"
              ]
            }
          }
        ]
      }
    }
  ]
}